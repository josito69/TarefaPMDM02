<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    style="@style/cabecera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="310dp"
        android:layout_height="416dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="34dp">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nombre" />

            <EditText
                android:id="@+id/regnome"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="nombre"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Apellido1" />

            <EditText
                android:id="@+id/regapellido1"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="apellido1"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Apellido2" />

            <EditText
                android:id="@+id/regapellido2"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="apellido2"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:" />

            <EditText
                android:id="@+id/regmail"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="email"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usuario" />

            <EditText
                android:id="@+id/regusuario"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="usuario"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contrase単a" />

            <EditText
                android:id="@+id/password"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="contrase単a"
                android:inputType="textPassword" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contrase単a" />

            <EditText
                android:id="@+id/repassword"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="retype contrase単a"
                android:inputType="textPassword" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/regcliente"
                        style="@style/etiquetas_layout_table"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:checked="true"
                        android:text="@string/cliente" />

                    <RadioButton
                        android:id="@+id/regadmin"
                        style="@style/etiquetas_layout_table"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/administrador" />
                </RadioGroup>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_span="2"
                android:background="@drawable/boton_redondo"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/foto"
                        style="@style/etiquetas_layout_table"
                        android:layout_width="134dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:checked="true"
                        android:text="Hacer foto" />

                    <RadioButton
                        android:id="@+id/file"
                        style="@style/etiquetas_layout_table"
                        android:layout_width="122dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Subir archivo" />
                </RadioGroup>

                <ImageButton
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="hacerFoto"
                    app:srcCompat="@drawable/baseline_done_outline_black_18dp" />

            </LinearLayout>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/registro"
        style="@style/boton"
        android:layout_width="117dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:onClick="registro"
        android:text="@string/registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>