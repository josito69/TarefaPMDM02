<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#D5DB95"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/idpedido"
        style="@style/etiquetas_layout_table"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/articulo"
        style="@style/etiquetas_layout_table"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/cantidad"
        style="@style/etiquetas_layout_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="3dp"
        android:textAlignment="textEnd" />

    <ImageView
        android:id="@+id/aceptacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        app:srcCompat="@drawable/baseline_done_outline_black_18dp" />

    <ImageView
        android:id="@+id/rechazo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:srcCompat="@drawable/baseline_highlight_off_black_18dp" />

</LinearLayout>