<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario">

    <Button
        android:id="@+id/account"
        style="@style/boton"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        android:onClick="changePersonalData"
        android:text="@string/pesonal_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout5" />

    <TableLayout
        android:id="@+id/tableLayout5"
        android:layout_width="292dp"
        android:layout_height="113dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="80dp"
        android:background="#DDDAC8"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/t2"
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nombre"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/nombre"
                style="@style/etiquetas_layout_table"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <TextView
                android:id="@+id/t1"
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Apellido1"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/apellido1"
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Apellido2"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/apellido2"
                style="@style/etiquetas_layout_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="314dp"
        android:layout_height="245dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="98dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/obama" />
</androidx.constraintlayout.widget.ConstraintLayout>